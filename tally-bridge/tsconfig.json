{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@/*": ["*"],
      "components/*": ["./app/components/*"],
      "logic/*": ["./app/logic/*"],
      "utils/*": ["./app/utils/*"]
    },
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "tsconfig.json", "legacy-code", "app/logic/ml"]
}
